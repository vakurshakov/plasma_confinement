{
  "__description": "test config to create one-sort plasma in periodic boundaries",
  "__date": "April 25, 2023",

  "Out_dir": "results/simple_rectangle/",

  "Geometry": {
    "size_x": 100.0,  "dx": 0.05,   "__units.x": "c_wp",
    "size_y": 100.0,  "dy": 0.05,   "__units.y": "c_wp",
    "time":   250.0,  "dt": 0.025,  "__units.t": "1/wp",

    "diagnose_time_step": 2.5,  "__units.dts": "1/wp",

    "boundaries": "px_py"
  },

  "Damping": {
    "__coordinates": "polar",
    "layer_width": 100,
    "factor": 0.4
  },

  "Particles": [
    {
      "Name": "plasma_electrons",
      "Parameters": {
        "density":  1.0,
        "charge":  -1.0,
        "mass":     1.0,
        "Np":       50,
        "T_x":      50e-3,
        "T_y":      50e-3
      },
      "Integration_steps" : [
        { "Pusher": "Boris_pusher" },
        { "Interpolation": "Simple_interpolation" },
        { "Decomposition": "Esirkepov_density_decomposition" },
        { "Boundaries_processor": "Particles_boundary" }
      ]
    }
  ],

  "Presets": [
    { "Set_fields_distribution": { "B": { "z": 0.1 }} },
    { "Set_particles": "plasma_electrons" }
  ],

  "Diagnostics": [
    "fields_energy",

    { "field_at_point": {
        "fields": [{"E": ["x", "y"]}, {"B": "z"}],
        "points": [{"x": 25.0, "y": 25.0}, {"x": 50.0, "y": 50.0}]
    }},

    { "field_on_segment": {
        "fields": [{"E": ["x", "y"]}, {"B": "z"}],
        "segments": [
          {"begin": {"x": 25.0, "y": 25.0}, "end": {"x": 25.0, "y": 50.0}},
          {"begin": {"x": 25.0, "y": 25.0}, "end": {"x": 50.0, "y": 25.0}}
        ]
    }},

    { "whole_field": {
        "fields": [{"E": ["x", "y"]}, {"B": "z"}],
        "area": {"begin": {"x": 0.0, "y": 0.0}, "end": {"x": 100.0, "y": 100.0}}
    }},

    { "particles_energy": {
        "particles_name": "plasma_electrons"
    }},

    { "distribution_moment": {
        "particles_names": "plasma_electrons",
        "moments": [
          "density",
          "Vx_moment",
          "Vy_moment",
          "Vr_moment",
          "Vphi_moment",
          "mVxVx_moment",
          "mVxVy_moment",
          "mVyVy_moment",
          "mVrVr_moment",
          "mVrVphi_moment",
          "mVphiVphi_moment",
          "velocity_distribution"
        ],
        "areas": {
          "XY": {
            "min": {"x": 10.0, "y": 10.0},
            "max": {"x": 90.0, "y": 90.0},
            "dp":  {"x": 0.05, "y": 0.05}
          },
          "VxVy": {
            "min": {"x": -0.1, "y": -0.1},
            "max": {"x":  0.1, "y":  0.1},
            "dp":  {"x": 1e-3, "y": 1e-3}
          }
        }
    }}
  ]
}
